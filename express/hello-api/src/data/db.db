------------------------------------------------
--- Criação da tabela Marca
------------------------------------------------
CREATE TABLE marca (
    cod_mar    INT(5) PRIMARY KEY AUTOINCREMENT,
    nome       VARCHAR(40)             NOT NULL
);

-----------------------||-----------------------

------------------------------------------------
--- Criação da tabela departamento
------------------------------------------------
CREATE TABLE departamento (
    cod_dep    INT(2) PRIMARY KEY AUTOINCREMENT,
    nome       varchar(40)             NOT NULL
);

-----------------------||-----------------------

------------------------------------------------
--- Criação da tabela categoria
------------------------------------------------
CREATE TABLE categoria (
    cod_cat    INT(3) PRIMARY KEY AUTOINCREMENT,
    nome       varchar(40)             NOT NULL
);

-----------------------||-----------------------

------------------------------------------------
--- Criação da tabela subcategoria
------------------------------------------------
CREATE TABLE subcategoria (
    cod_sub    INT(3) PRIMARY KEY AUTOINCREMENT,
    nome       varchar(40)             NOT NULL
);

-----------------------||-----------------------

------------------------------------------------
--- Criação da tabela Classificação
------------------------------------------------
CREATE TABLE classificacao (
    cod_dep    INT(2)         PRIMARY KEY,
    cod_cat    INT(3)         PRIMARY KEY,
    cod_sub    INT(3)         PRIMARY KEY,
    FOREIGN KEY (cod_dep)
        REFERENCES departamento (cod_dep),
    FOREIGN KEY (cod_cat)
        REFERENCES  categoria   (cod_cat),
    FOREIGN KEY (cod_sub)
        REFERENCES subcategoria (cod_sub)
);
-----------------------||-----------------------

------------------------------------------------
--- Criação da tabela Peça
------------------------------------------------
CREATE TABLE peca (
    cod_pec     CHAR(36)      PRIMARY KEY, 
    descricao   VARCHAR(200),
    estado_uso  VARCHAR(20)      NOT NULL,
    preco       NUMERIC(8,2)     NOT NULL,
    nome        VARCHAR(80)      NOT NULL,

    cod_usr_cp  CHAR(36),
    FOREIGN KEY (cod_usr_cp)
        REFERENCES usuario (cod_usr),

    data_compra CHAR(10) 
    CHECK (data_compra LIKE "__/__/____"),

    cod_dep     INT(2)           NOT NULL, 
    FOREIGN KEY (cod_dep)
        REFERENCES departamento (cod_dep),

    cod_cat     INT(3)           NOT NULL,
    FOREIGN KEY (cod_cat)
        REFERENCES categoria (cod_cat),

    cod_sub     INT(3)           NOT NULL,
    FOREIGN KEY (cod_sub)
        REFERENCES subcategoria (cod_sub),

    cod_mar     INT(3)           NOT NULL,
    FOREIGN KEY (cod_mar)
        REFERENCES marca (cod_mar),

    cod_usr_cr  CHAR(36),
    FOREIGN KEY (cod_usr_cr)
        REFERENCES usuario (cod_usr_cr)
);

-----------------------||-----------------------

------------------------------------------------
--- Criação da tabela Lista_Desejo
------------------------------------------------
CREATE TABLE lista_desejo (
    cod_usr     CHAR(36)      PRIMARY KEY,
    FOREIGN KEY (cod_usr)
        REFERENCES usuario (cod_usr),
    cod_pec     CHAR(36)      PRIMARY KEY,
    FOREIGN KEY (cod_pec)
        REFERENCES peca (cod_pec)
);

-----------------------||-----------------------

------------------------------------------------
--- Criação da tabela Foto_Produto
------------------------------------------------
CREATE TABLE foto_produto (
    cod_pec     CHAR(36)      PRIMARY KEY,
    FOREIGN KEY (cod_pec)
        REFERENCES peca (cod_pec),
    url_img     VARCHAR(300)  PRIMARY KEY
);

