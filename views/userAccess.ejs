<%- include('partials/headerOpen'); %>
    <link rel="stylesheet" href="/css/entrada.css" />
<%- include('partials/headerClose'); %>
    <body>
        <header><%- include('partials/navBar'); %></header>
        <main>
            <div class="container">
                <div class="invisible cont-cad">
                    <h1>Cadastro</h1>
                    <form
                        action="/usuario/cadastra"
                        method="POST"
                        autocomplete="off"
                    >
                        <label for="nome">E-mail</label>
                        <input
                            type="text"
                            class="input input-nome"
                            name="eMail"
                            placeholder="Exemplo: artu@gmail.com"
                            required
                        />
                        <label for="nome">Usuário</label>
                        <input
                            type="text"
                            class="input input-nome"
                            name="nome"
                            placeholder="Exemplo: artu"
                            required
                        />
                        <label for="senha">Senha</label>
                        <input
                            type="password"
                            class="input input-senha"
                            name="senha"
                            placeholder="Exemplo: aw@kSo8s"
                            required
                        />
                        <input type="submit" class="submit" value="Cadastrar" />
                    </form>
                    <p>Já tem conta? <span class="botao-cad">Acesse!</span></p>
                </div>
                <div
                    class="cont-image"
                    style="background-image: url(/img/moda-sustentavel.jpg)"
                ></div>
                <div class="cont-log">
                    <h1>Acesso</h1>
                    <form action="/usuario/conecta" method="POST" autocomplete="off">
                        <label for="eMail">E-mail</label>
                        <input
                            type="text"
                            class="input input-nome"
                            name="eMail"
                            placeholder="Exemplo: artu@gmail.com"
                            required
                        />
                        <label for="senha">Senha</label>
                        <input
                            type="password"
                            class="input input-senha"
                            name="senha"
                            placeholder="Exemplo: aw@kSo8s"
                            required
                        />
                        <input type="submit" class="submit" value="Entrar" />
                    </form>
                    <p>
                        Não tem conta? <span class="botao-log">Cadastre-se!</span>
                    </p>
                </div>
            </div>
        </main>
        <script
            src="/js/modulos/formEntrada.js"
            type="module"
            loading="lazy"
        ></script>
<%- include('partials/footer'); %>
